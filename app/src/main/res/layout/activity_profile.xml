<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border_button_login_activity"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="PROFILE"
            android:textColor="@color/design_default_color_primary"
            android:textSize="48sp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/profile_user_name"
            style="@style/edittext_style_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_button_login_activity"
            android:drawableLeft="@drawable/ic_action_user_name_light"
            android:text="trtrtrtrt">

        </EditText>

        <Button
            android:id="@+id/profile_user_birth"
            style="@style/edittext_style_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_button_login_activity"
            android:drawableLeft="@drawable/ic_action_user_birth_light"
            android:gravity="left|center_vertical"
            android:text="CALANDER">

        </Button>


        <EditText
            android:id="@+id/profile_user_phone"
            style="@style/edittext_style_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_button_login_activity"
            android:drawableLeft="@drawable/ic_action_user_phone_light"
            android:inputType="number"
            android:text="0912345213">

        </EditText>

        <Button
            android:id="@+id/btn_edit_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_button_register_activity"
            android:text="EDIT PROFILE"
            android:textColor="@android:color/white">

        </Button>


    </LinearLayout>

</RelativeLayout>